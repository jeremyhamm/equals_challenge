{
  "compilerOptions": {
    "target": "es6",
    "lib": [ "esnext" ],
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noUnusedParameters": false,
    "removeComments": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules"
  ]
}